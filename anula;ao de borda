￼	public void init() {
￼		final JPanel jContentPane = new JPanel(new GridLayout(1, 1));
￼		this.jtpDesktop = new Desktop(this.recuperarParametrosParaFormulario(), this);
￼		jContentPane.add(this.jtpDesktop, "Center");
